.container {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f5f7fa;
    min-height: 100vh;
}

/* 顶部切换栏 */
.header {
    display: flex;
    flex-direction: column;
    padding: 16rpx;
    background-color: #e6f2ff;
    border-bottom: 2rpx solid #d0e8ff;
    gap: 12rpx;
}

.tab-group,
.difficulty-group {
    display: flex;
    gap: 8rpx;
    justify-content: center;
    width: 100%;
    max-width: 500rpx;
    margin: 0 auto;
}

.tab-btn {
    padding: 8rpx 16rpx;
    border: 2rpx solid #91c2ff;
    background-color: #fff;
    color: #3377ff;
    border-radius: 20rpx;
    font-size: 28rpx;
    cursor: pointer;
    transition: all 0.3s ease;
    outline: none;
    flex: 1;
    text-align: center;
}

.difficulty-btn {
    padding: 8rpx 12rpx;
    border: 2rpx solid #91c2ff;
    background-color: #fff;
    color: #3377ff;
    border-radius: 20rpx;
    font-size: 26rpx;
    cursor: pointer;
    transition: all 0.3s ease;
    outline: none;
    flex: 1;
    text-align: center;
    min-width: 0;
}

.tab-btn.active,
.difficulty-btn.active {
    background-color: #3377ff;
    color: #fff;
    border-color: #3377ff;
}

/* 中部录入区 */
.main {
    padding: 16rpx;
}



.section {
    background-color: #fafbff;
    border-radius: 12rpx;
    padding: 16rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.section-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
    padding-bottom: 8rpx;
    border-bottom: 2rpx solid #e0e7ff;
    display: block;
}

.item-group {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.item {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.item-label {
    font-size: 28rpx;
    color: #666;
    flex: 1;
}

.item-input-wrapper {
    display: flex;
    align-items: center;
    gap: 8rpx;
}

.item-input {
    width: 160rpx;
    padding: 8rpx 12rpx;
    border: 2rpx solid #e0e7ff;
    border-radius: 8rpx;
    font-size: 28rpx;
    text-align: right;
    outline: none;
    transition: border-color 0.3s ease;
}

.item-input:focus {
    border-color: #3377ff;
    box-shadow: 0 0 0 4rpx rgba(51, 119, 255, 0.1);
}

.item-desc {
    font-size: 24rpx;
    color: #999;
}

/* 评分标准按钮样式 */
.score-standard-btn-wrapper {
    margin-top: 16rpx;
    display: flex;
    justify-content: center;
}

.score-standard-btn {
    padding: 8rpx 24rpx;
    background-color: #f0f5ff;
    color: #3377ff;
    border: 2rpx solid #d0e8ff;
    border-radius: 16rpx;
    font-size: 26rpx;
    cursor: pointer;
    transition: all 0.3s ease;
    outline: none;
    flex: none;
}

.score-standard-btn:active {
    background-color: #e6f2ff;
    transform: scale(0.98);
}

/* 评分标准悬浮窗样式 */
.score-standard-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
}

.modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0.6;
}

.modal-content {
    position: relative;
    z-index: 10000;
    width: 90%;
    max-width: 600rpx;
    max-height: 80vh;
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 24rpx;
    background-color: #f5f9ff;
    border-bottom: 2rpx solid #e0e7ff;
    flex: none;
}

.modal-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
}

.modal-close {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    border-radius: 50%;
    transition: all 0.3s ease;
}

.modal-close:active {
    background-color: #e6f2ff;
}

.close-text {
    font-size: 40rpx;
    color: #999;
    line-height: 1;
    font-weight: 300;
}

.modal-body {
    padding: 24rpx;
    overflow-y: auto;
    flex: 1;
}

/* 标准内容样式 */
.standard-text {
    font-size: 24rpx;
    color: #666;
    line-height: 1.6;
    margin-bottom: 24rpx;
}

.standard-section {
    margin-bottom: 24rpx;
}

.standard-section:last-child {
    margin-bottom: 0;
}

.section-title-small {
    font-size: 26rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
    display: block;
    padding-bottom: 8rpx;
    border-bottom: 2rpx solid #e0e7ff;
}

.standard-list {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.standard-item {
    display: flex;
    flex-direction: column;
    gap: 6rpx;
}

.standard-score {
    font-size: 24rpx;
    font-weight: 500;
    color: #3377ff;
}

.standard-desc {
    font-size: 24rpx;
    color: #666;
    line-height: 1.5;
    margin-left: 32rpx;
}

/* 底部结果区 */
.footer {
    padding: 16rpx;
    background-color: #fff;
    border-top: 2rpx solid #e0e7ff;
}

.result-card {
    background-color: #e6f2ff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 12rpx;
}

.result-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
}

.result-item:last-child {
    margin-bottom: 0;
}

.result-label {
    font-size: 28rpx;
    color: #666;
}

.result-value {
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
}



.final-score {
    padding: 12rpx 0;
    border-top: 2rpx solid #d0e8ff;
    border-bottom: 2rpx solid #d0e8ff;
}

.final-score .result-value {
    font-size: 56rpx;
    font-weight: 700;
    color: #3377ff;
}



.tips {
    text-align: center;
    font-size: 24rpx;
    color: #999;
    display: block;
    margin-top: 24rpx;
    margin-bottom: 16rpx;
}

/* 计算分数按钮样式 */
.calculate-btn-wrapper {
    padding: 16rpx;
    display: flex;
    justify-content: center;
    margin-top: 16rpx;
}

.calculate-btn {
    padding: 16rpx 48rpx;
    background-color: #3377ff;
    color: #fff;
    border: none;
    border-radius: 24rpx;
    font-size: 32rpx;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    outline: none;
    flex: none;
    box-shadow: 0 4rpx 16rpx rgba(51, 119, 255, 0.2);
}

.calculate-btn:active {
    background-color: #2563eb;
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(51, 119, 255, 0.3);
}

/* 评分标准按钮样式 */
@media (max-width: 375px) {
    .header {
        flex-direction: column;
        gap: 12rpx;
        align-items: stretch;
    }
    
    .tab-group,
    .difficulty-group {
        justify-content: center;
    }
    
    .item {
        flex-direction: column;
        align-items: stretch;
        gap: 8rpx;
    }
    
    .item-input-wrapper {
        justify-content: flex-end;
    }
    
    .final-score .result-value {
        font-size: 48rpx;
    }
}